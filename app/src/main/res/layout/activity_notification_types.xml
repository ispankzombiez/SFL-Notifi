                    android:text="Cooking"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/buildingsSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Composters -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
